{% extends 'base_user.html.twig' %}

{% block title %}Modifier mon compte{% endblock %}

{% block body %}
    <div class="container">
        <div class="py-5">
            <h1>Modifier mon compte</h1>

            {{ form_start(form) }}
            <div class="row">
                <div class="col-lg-6">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.lastName) }}
                </div>
                <div class="col-lg-6">
                    {{ form_row(form.email) }}
                </div>
            </div>
            <button class="btn btn-primary">{{ button_label|default('Modifier') }}</button>
            {{ form_end(form) }}

            <hr>
            <a href="{{ path('dashboard') }}" class="btn btn-outline-primary">Retour au dashboard</a>

        </div>
    </div>
{% endblock %}
